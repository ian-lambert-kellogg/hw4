<h1><%= @place["name"] %></h1>

<p>
<a class="btn btn-primary" href="/entries/new?place_id=<%= @place["id"] %>" role="button">New Post</a>
</p>

<% if session["user_id"] != nil  %>
<h2>My Entries</h2>




 <div class="row">
    <% for entry in @entries %>
       <div class="col-sm-6 col-md-3">
        
          <h4><%= entry["title"] %></h4>
          <%= entry["occurred_on"] %>
          <img src="<%= entry["image"] %>" class="img-fluid">
          <%= entry["description"] %>
       </div>
    <% end %>
       
</div>

<% else %>

Login to see your entries

<% end %>

 